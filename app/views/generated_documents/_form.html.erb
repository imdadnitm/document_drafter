<%= form_with(model: generated_document, data:{controller:"placeholders"}, html: {multipart: true}) do |form| %>
  <% if generated_document.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(generated_document.errors.count, "error") %> prohibited this generated_document from being saved:</h2>

      <ul>
        <% generated_document.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :template_id, style: "display: block" %>
    <%= form.collection_select(:template_id, ::Template.all, :id, :name, {prompt: true}, {data:{placeholders_target:"selected_template", action:"change->placeholders#render_placeholders"}}) %>
  </div>

  <turbo-frame id="placeholder_input_frame">
    <% if @generated_document&.template&.placeholders %>
     <%= render partial: "placeholder_inputs", locals:{template_placeholders: JSON.parse(@generated_document.template.placeholders), input_values: JSON.parse(@generated_document.placeholder_inputs || '{}')} %>
    <% else %>Placehlder input fields will load here<% end %>
  </turbo-frame>

  <div>
    <%= form.submit %>
  </div>
<% end %>
